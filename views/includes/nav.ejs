<nav>
    <div id="user-UI">
        <div class="user-UI__upper-section">
            <img src="/images/user.png" alt="user image" class="user-image">
            <% if (!isAuthenticated) { %>
                <h1 id="user-name">Not logged in</h1>
            <% } else { %>
                <h1 id="user-name"><%= user.username %></h1>
            <% } %>
            <div id="burger-menu">
                <span class="burger-line"></span>
                <span class="burger-line"></span>
                <span class="burger-line"></span>
            </div>
            <ul id="authentication-links">
                <% if (pageTitle != "Calendio") { %>
                    <li class="autehntication-link">
                        <a href="/">Home</a>
                    </li>
                <% } %>
                <% if (!isAuthenticated) { %>
                    <li class="authentication-link">
                        <% if( pageTitle == "Login" ) { %>
                            <p class="active-link">Login</p>
                        <% } else { %>
                            <a href="/login">Login</a>
                        <% } %>
                    </li>
                    </li>
                    <li class="authentication-link">
                        <% if( pageTitle == "Sign-up" ) { %>
                            <p class="active-link">Sign-up</p>
                        <% } else { %>
                            <a href="/sign-up">Sign-up</a>
                        <% } %>
                    </li>
                <% } else { %>
                    <li class="autehntication-link">
                        <form action="/logout" method="post">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <button type="submit">Logout</button>
                        </form>
                    </li>
                <% } %>
            </ul>
        </div>
        <% if(isAuthenticated) { %>
            <div class="user-UI__lower-section">
    
                <div class="current-level">
                    1
                </div>
    
                <div class="progress-bar">
                    <div class="progress"></div>
                    <div class="progress-text"> <span class="current-xp-text">0</span> / <span class="max-xp-text">100</span></div>
                </div>
    
                <div class="next-level">
                    2
                </div>
            </div>
        <% } %>
    </div>
</nav>